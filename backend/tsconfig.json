{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src",
    "backend/src/index.ts",
    "global.d.ts",
    "backend/src/services/UserServices",
    "backend/src/services/TaskServices",
    "backend/src/services/AuthServices.ts",
    "backend/src/helpers",
    "backend/src/database/config.js",
    "backend/src/database/models",
    "backend/src/database/migrations",
    "backend/src/server.ts",
    "backend/src/constants.ts",
    "backend/src/utils"
  ],
  "exclude": ["node_modules", "dist"]
}
